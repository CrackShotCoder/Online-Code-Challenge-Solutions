def utopianTree(n):
    """Determines the height of the tree after n growth cycles.
    First cycle doubles the height, second cycle adds 1, and that process repeates."""
    
    i = 1
    height = 1
    
    while i <= n:
        if i % 2 == 1:
            height = height * 2
            i
        else:
            height += 1
        
        i += 1
    
    return height
